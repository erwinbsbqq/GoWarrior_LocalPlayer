<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/Activity_zoom</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- LocalTheme -->
    <style name="LocalTheme" parent="android:Theme.Holo">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    
    <style name="StyledIndicators" parent="@android:style/Theme.Holo">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <!--  <item name="android:background">@drawable/custom_tab_indicator</item> -->
        <item name="android:textColor">@color/custom_tab_title</item>
        <item name="android:textSize">28sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:cacheColorHint">#00000000</item>
        <!--  <item name="android:dividerPadding">10dp</item>  -->
        <!--  <item name="android:showDividers">middle</item>  -->
        <!--  <item name="android:fadingEdge">horizontal</item>  -->
        <!--  <item name="android:fadingEdgeLength">8dp</item>  -->
        <item name="android:background">@drawable/custom_tab_bg</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">86dp</item>
    </style>
    


    
    <!-- VodItemList Tab -->
    <style name="TabIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2px</item>
        <item name="android:paddingRight">2px</item>
        <item name="android:background">@drawable/vod_tab_widget_indicator_selector</item>
 		<item name="android:textColor">#fff</item>
        <item name="android:textSize">30px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabIndicator.AppsCustomize">
        <item name="android:minWidth">100px</item>
        <item name="android:maxWidth">100px</item>
    </style>

    <style name="DialogTheme">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:windowBackground">@color/dialogBackground</item>
    </style>
    
    <style name="LanLayout">
        <item name="android:layout_width">798px</item>
        <item name="android:layout_height">460px</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">140px</item>
    </style>
    
    <style name="LanTextMessage">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>
    
    <style name="LanTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="LanTextLabel" parent="LanTextView">
        <item name="android:layout_width">170px</item>
        <item name="android:layout_height">50px</item>
    </style>

    <style name="LanTextContent" parent="LanTextView">
        <item name="android:layout_width">330px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:paddingLeft">30px</item>
    </style>
    
    <style name="Button1">
        <item name="android:layout_width">218px</item>
        <item name="android:layout_height">72px</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="android:paddingBottom">18px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>
    
    <style name="DigitWheelView">
        <item name="android:layout_width">35px</item>
        <item name="android:layout_height">52px</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Button2">
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">72px</item>
        <item name="android:background">@drawable/button_2</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="Button4">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/button_4</item>
        <item name="android:padding">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38px</item>
    </style>
    
    <style name="Button5">
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:background">@drawable/button_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38px</item>
    </style>
    
    <style name="BigDialog">
        <item name="android:layout_width">880px</item>
        <item name="android:layout_height">580px</item>
    </style>
    
    <style name="SmallDialog">
        <item name="android:layout_width">580px</item>
        <item name="android:layout_height">480px</item>
    </style>
    
    <style name="MoveInOut">
        <item name="android:windowEnterAnimation">@anim/notice_move_in</item>
        <item name="android:windowExitAnimation">@anim/notice_move_out</item>
    </style>
    
    <style name="Activity_zoom">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>  
        <item name="android:activityOpenExitAnimation">@null</item>  
	<item name="android:activityCloseEnterAnimation">@null</item>  
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:taskOpenExitAnimation">@anim/fade_out</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/zoom_out</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@anim/zoom_out</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/zoom_out</item>
    </style>
    
    <style name="ShortcutStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="ScreenSettingGuide">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
