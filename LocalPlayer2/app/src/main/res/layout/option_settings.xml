<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/option_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="578px"
        android:layout_height="290px"
        android:layout_gravity="center"
        android:background="@drawable/option_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/option_id_up_tips"
            android:layout_width="wrap_content"
            android:layout_height="12px"
            android:layout_marginTop="15px"
            android:background="@drawable/arrow_up"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/option_id_others_list"
            android:layout_width="538px"
            android:layout_height="213px"
            android:divider="@null"
            android:listSelector="@drawable/option_style_others"
            android:scrollbars="none"
            android:smoothScrollbar="true" >
        </ListView>

        <ImageView
            android:id="@+id/option_id_down_tips"
            android:layout_width="wrap_content"
            android:layout_height="12px"
            android:layout_marginBottom="15px"
            android:background="@drawable/arrow_down"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
